    $("#greenx").click(() => {
        theme.attr("href", "./CSS/green.css")
    });
    $("#redx").click(() => {
        theme.attr("href", "./CSS/red.css")
    });

    $("#bluex").click(() => {
        theme.attr("href", "./CSS/blue.css")
    });
    $("#blackx").click(() => {
